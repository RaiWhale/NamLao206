@model NamLao206.Models.News


@using (Html.BeginForm("Create", "News", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


    <div id="panel-1" class="panel panel-default">
        <div class="panel-heading">
            <span class="title elipsis">
                <strong>@ViewBag.Title</strong> <!-- panel title -->
            </span>

            <!-- right options -->
            <ul class="options pull-right list-inline">
                <li><a href="#" class="opt panel_colapse" data-toggle="tooltip" title="Colapse" data-placement="bottom"></a></li>
                <li><a href="#" class="opt panel_fullscreen hidden-xs" data-toggle="tooltip" title="Fullscreen" data-placement="bottom"><i class="fa fa-expand"></i></a></li>
            </ul>
            <!-- /right options -->

        </div>
        <div class="panel-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-horizontal">
                <div class="form-group col-md-12">
                    <div class="form-group col-md-6">
                        @Html.Label("Tiêu đề", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tiêu đề", required = "required" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        @Html.Label("Nhóm tin tức", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            @Html.DropDownListFor(model => model.TopicId, null, "--Chọn nhóm tin tức --", htmlAttributes: new { @class = "form-control select2", @id = "TopicId" })
                            @Html.ValidationMessageFor(model => model.TopicId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group col-md-12">
                    <div class="form-group col-md-6">
                        @Html.Label("Nhóm tin con", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            @Html.DropDownListFor(model => model.SubMenuId, new SelectList(" "), "--Chọn nhóm tin tức --", htmlAttributes: new { @class = "form-control select2", @id = "SubMenuId" })
                            @Html.ValidationMessageFor(model => model.SubMenuId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        @Html.Label("Cơ sở", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            @Html.DropDownListFor(model => model.cosoId, null, "--Chọn cơ sở --", htmlAttributes: new { @class = "form-control select2", @id = "cosoId" })
                            @Html.ValidationMessageFor(model => model.cosoId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group col-md-12">
                    <div class="form-group col-md-4">
                        @Html.Label("Tóm tắt", htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Summary, new { htmlAttributes = new { @class = "form-control", @placeholder = "Không quá 100 chữ", required = "required" } })
                        @Html.ValidationMessageFor(model => model.Summary, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-12">
                    <div class="form-group col-md-4">
                        @Html.Label("Chi tiết bài đăng", htmlAttributes: new { @class = "control-label col-md-4" })
                    </div>
                    <div class="col-md-12">
                        @Html.TextAreaFor(model => model.Details, htmlAttributes: new { @class = "form-control summernote" })
                        @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-12">
                    <div class="form-group col-md-4">
                        @Html.Label("Hình ảnh đại diện", htmlAttributes: new { @class = "control-label col-md-4" })
                    </div>
                    <div class="col-md-12">
                        <input name="pic" id="pic" type="file" class="form-control" />
                    </div>
                </div>
            </div>
            <div style="float:right">
                <button type="submit" id="submit" class="btn btn-primary">Lưu</button>
       
            </div>
        </div>
    </div>
}


