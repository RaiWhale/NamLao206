@model NamLao206.Models.AlbumPicture



@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
<div class="panel-body">
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            @Html.Label("Tên Album", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.AlbumId, null, htmlAttributes: new { @class = "form-control is-invalid-cus" })
                @Html.ValidationMessageFor(model => model.AlbumId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3" for="Logo">Hình ảnh:</label>
            <div class="col-md-9">
                <input type="file" class="btn btn-outline-primary rounded-pill mt-2 is-invalid-cus" name="pic" id="pic" multiple placeholder="Hình ảnh" required />
            </div>
        </div>
    </div>
    <div class="form-group" style="float:right">
        <button type="submit" class="mt-2 btn btn-success">Lưu</button>
        <button type="button" class="mt-2 btn btn-light" data-dismiss="modal">Đóng</button>
    </div>
</div>
}


