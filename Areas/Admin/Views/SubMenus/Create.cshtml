@model NamLao206.Models.SubMenu

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="panel-body">
    <div class="form-horizontal">
        @Html.HiddenFor(model => model.TopicId)
        @Html.HiddenFor(model => model.ParentId)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Tạo Menu con", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.subMenuName, new { htmlAttributes = new { @class = "form-control textarea-cus", required = "required" } })
                @Html.ValidationMessageFor(model => model.subMenuName, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div style="float:right">
        <button type="submit" class="mt-2 btn btn-success">Lưu</button>
        <button type="button" class="mt-2 btn btn-light" data-dismiss="modal">Đóng</button>
    </div>
</div>
}

