@using NamLao206.Models
@using PagedList.Mvc
@using PagedList
@model PagedList.IPagedList<NamLao206.Models.News>

@{
    namlao206dbEntities db = new namlao206dbEntities();
    var news = db.News.OrderByDescending(x => x.Id).FirstOrDefault();
    var topics = ViewBag.topics as List<Topic>;
}
<div class="course-single-right-sidebar">
    <section class="breadcrumb-bg" style="background-image: url('../../Content/Uploads/Banners/—Pngtree—medical security technology sense blue_1002464.jpg'); ">
        <div class="container">
            <div class="breadcrumb-holder">
                <div>

                    <div class="section-title justify-content-center mb-4 mb-md-8 wow fadeInUp">
                        <span class="shape shape-left bg-info"></span>
                        <h2 class="text-danger text-center">@ViewBag.TopicName</h2>
                        <span class="shape shape-right bg-info"></span>
                    </div>          
                </div>
            </div>
        </div>
    </section>
    <!-- /PAGE HEADER -->

        @using (Html.BeginForm("NhomNews", "Home", FormMethod.Get))
        {
            @Html.Hidden("topic")
            @Html.Hidden("submenu")                        
            <section class="pt-7 pb-7 pt-md-10">
                <div class="container">
                    <form class="shadow-sm rounded mb-8">
                        <div class="input-group input-group-lg">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-light border-0 px-4">
                                    <i class="fa fa-search text-muted font-size-18" aria-hidden="true"></i>
                                </span>
                            </div>
                            <input name="search" type="text" class="form-control bg-light border-0 form-control-lg" aria-label="Amount (to the nearest dollar)" placeholder="Search something..." required="">
                            <div class="input-group-append">
                                <button type="submit"  class="btn shadow-none btn-lg btn-info text-uppercase rounded-0 rounded-end">Tìm kiếm</button>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        }
 
    <!-- -->
    <section class="py-7 py-md-10">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-lg-9">
                    <div class="row">

                        @foreach (var item in Model)
                        {
                            if (item.Topic.NhomNews != 1)
                            {
                                @Html.Partial("_itemNhomNews", item)
                            }
                            else
                            {
                                @Html.Partial("_itemNhomNews1", item)
                            }
                        }

                    </div>
                    @Html.PagedListPager(Model, page => Url.Action("NhomNews", "Home", new { page, search = ViewBag.search, topic = ViewBag.topic, submenu = ViewBag.submenu}))
                </div>
                <div class="col-md-4 col-lg-3">
                    @Html.Partial("_RightSide", news)
                </div>
            </div>
          
        </div>
    </section>
</div>
