@model NamLao206.Models.News
@using NamLao206.Utils
<!--Sua-->
@{
    string src = MySecurity.GetSrcPicture(Model.TopicId);
    var pic = Model.Picture;
    if (!string.IsNullOrEmpty(pic))
    {
        src = "/Content/Uploads/News/" + pic;
    }
}
<div class="row">
    <div class="col-md-6">
        <a href="~/Home/NewsDetail/?title=@Model.TitleChange&&newsid=@Model.Id">
            <p class="lead" style="color: black; text-align: center; /* Căn giữa tiêu đề */ margin-bottom: 20px; /* Khoảng cách dưới tiêu đề */ text-align: left; ">
                <strong>@Model.Title</strong>
            </p>
        </a>
        <p style=" font-weight: 200; color: black; font-size: 14px;text-align: left; line-height: 1.6;  ">@Model.Summary.</p>
    </div>

    <div class="col-md-6 text-center">
        <a href="~/Home/NewsDetail/?title=@Model.TitleChange&&newsid=@Model.Id">
            <img class="img-responsive animate_fade_in" src="@src" alt="" style="width: 500px; height: 300px; object-fit: cover; display: block; margin: 0 auto; " />
        </a>
    </div>
</div>
