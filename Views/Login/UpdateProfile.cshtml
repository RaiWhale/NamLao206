@model PhusannhiHospital.Models.ViewModels.UpdateProfileVM

@using PhusannhiHospital.Models

@{ 

    var chucvu = ViewBag.Chucvu;

    var src = "";

}
<section class="page-header page-header-xs">
    <div class="container">

        <!-- breadcrumbs -->
        <ol class="breadcrumb breadcrumb-inverse">
            <li><a href="/Home/Trangchu">Home</a></li>
   
            <li class="active">@Model.Name</li>
        </ol><!-- /breadcrumbs -->

    </div>
</section>
<!-- /PAGE HEADER -->
<!-- -->
<section>
    <div class="container">
        <div class="row">

            <!-- RIGHT -->
            <div class="col-lg-9 col-md-9 col-sm-8 order-md-2 order-sm-2 mb-80">

                <ul class="nav nav-tabs nav-top-border">
                    <li class="active"><a href="#info" data-toggle="tab">Thông tin cá nhân</a></li>
                    <li><a href="#password" data-toggle="tab">Password</a></li>
                </ul>

                <div class="tab-content mt-20">

                    <!-- PERSONAL INFO TAB -->
                    <div class="tab-pane active" id="info">
                        @using (Html.BeginForm("UpdateProfile", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {

                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label class="form-control-label">Họ tên</label>
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = Model.Name } })
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Số điện thoại</label>
                                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", @placeholder = Model.Phone, Type = "number", @min = "0" } })
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Email</label>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = Model.Email, Type = "email" } })
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Địa chỉ</label>
                                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", @placeholder = Model.Address } })
                            </div>

                            <div class="form-group">
                                <div class="sky-form m-0">
                                    <label class="label">Select File</label>
                                    <label for="file" class="input input-file">
                                        <div class="button">
                                            <input id="pic" name="pic" type="file" multiple class="form-control" />Browse
                                        </div>
                                        <input type="text" readonly>
                                    </label>
                                </div>
                            </div>

                            <div class="margiv-top10">
                                <a href="#" class="btn btn-primary"><i class="fa fa-check"></i> Cập nhật </a>
                                <a href="#" class="btn btn-default">Cancel </a>
                                <label class="m-l-10">@ViewBag.Message</label>

                            </div>
                        }
                    </div>
                            <!-- /PERSONAL INFO TAB -->
                            <!-- PASSWORD TAB -->
                            <div class="tab-pane fade" id="password">

                                <form action="#" method="post">

                                    <div class="form-group">
                                        <label class="form-control-label">Current Password</label>
                                        <input type="password" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label class="form-control-label">New Password</label>
                                        <input type="password" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label class="form-control-label">Re-type New Password</label>
                                        <input type="password" class="form-control">
                                    </div>

                                    <div class="margiv-top10">
                                        <a href="#" class="btn btn-primary"><i class="fa fa-check"></i> Change Password</a>
                                        <a href="#" class="btn btn-default">Cancel </a>
                                    </div>

                                </form>

                            </div>
                            <!-- /PASSWORD TAB -->
                        </div>
            </div>


            <!-- LEFT -->
            <div class="col-lg-3 col-md-3 col-sm-4 pull-lg-9 order-md-1 order-sm-1">
                <div class="premium-thumbnail-circle">
                    <a href="#">
                        <div class="spinner"></div>
                        <figure>
                            @{
                                if (Model.Avatar!=null)
                                {
                                    src = "/Content/Uploads/Avatars/" + Model.Avatar;
                                }
                                else
                                {
                                    src = "/Content/TrangChu/assets/images/Logo/logo.png";                          
                                }
                                <img src="@src" alt="img" style="width:230px; height:230px">
                            }
                        </figure>

                        <div class="info">
                            <div class="info-back">
                                <h3>@Model.Name</h3>  
                                <p>
                                    <strong>@chucvu</strong>
                                </p>
                            </div>

                        </div>

                    </a>
                </div>
            </div>

        </div>
    </div>
</section>
<!-- / -->
